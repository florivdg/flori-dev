---
interface Props {
  tags: string[]
}

const { tags } = Astro.props
---

<ul class="flex-cols flex flex-wrap gap-2">
  {
    tags.map((tag) => (
      <li class="inline-block -rotate-1 -skew-x-3 rounded-full bg-gradient-to-tr from-pink-500 to-blue-500 px-2.5 py-1 font-mono text-xs font-semibold text-white">
        #{tag.replaceAll(' ', '')}
      </li>
    ))
  }
</ul>
