---
import type { OpenGraphData } from '../types/OpenGraph'

export interface Props {
  og: OpenGraphData
}

const { og } = Astro.props

/// Use a fallback image if no image is provided
const ogImage = og.image_url ? og.image_url : '/og-image.jpg'
---

<meta property="og:title" content={og.title} />
<meta property="og:type" content={og.type} />
<meta property="og:image" content={ogImage} />
<meta property="og:description" content={og.description} />
<meta property="og:site_name" content="flori.dev" />
