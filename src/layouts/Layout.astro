---
import OpenGraph from '../components/OpenGraph.astro'
import type { OpenGraphData } from '../types/OpenGraph'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import '../styles/index.css'

export interface Props {
  title: string
  og?: OpenGraphData
}

/// Title
const { title: pageTitle, og } = Astro.props
const currentPath = new URL(Astro.request.url).pathname
const title = currentPath === '/' ? pageTitle : `${pageTitle} | flori.dev`
---

<html lang="en" class="h-full antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Personal website of Florian van der GaliÃ«n."
    />
    <meta
      name="theme-color"
      content="#fff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="rgb(31 41 55)"
      media="(prefers-color-scheme: dark)"
    />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="me" href="https://sueden.social/@florivdg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {og && <OpenGraph og={og} />}
  </head>
  <body class="bg-zinc-50 text-slate-600 dark:bg-gray-900 dark:text-slate-200">
    <div class="fixed inset-0 flex justify-center">
      <div class="flex w-full max-w-5xl">
        <div
          class="w-full bg-white ring-1 ring-zinc-100 dark:bg-gray-800 dark:ring-gray-700/80"
        >
        </div>
      </div>
    </div>

    <div class="relative">
      <Header />

      <slot />

      <Footer />
    </div>
  </body>
</html>
